.app-search{
    padding: 30px 0px;

    .query {
        font-family: source_sans_prolight;
        font-size: 24px;
        display: block;
        height: 50px;
        background-color: #f4f4f4;
        border: 0;
        outline: 0;
        color: #333;
    }

    button.search {
        width: 35px;
        height: 50px;
        background: none;
        border: 0;
        outline: 0;
        float: right;
        margin-top: -50px;
        margin-right: 10px;

        &:hover {
            cursor: pointer;
            path {
              fill: #fff;
            }
        }
    }
}



