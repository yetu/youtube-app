.pcmode {

    app-search app-key-input {
        display: none;
    }
}

.tvmode {
    
    .container { 
        width: 100vw;
        padding: 0;
    }
    
    .container, yt-result-set, .yt-result-set, .result, .ui-video-list {
        overflow-y: visible;
    }
    
    .app-search,
    .yt-result-set {
        margin-left: 160px;
    }
    
    .app-search {
        z-index: 100;
        width: 1490px !important;
        margin-right: 160px;
        .query {
            width: 100%;
        }
    
    }
    .app-search,
    app-key-input {
        width: auto;
    }
    
    app-key-input {
        margin-bottom: 65px;
        
        li {
            display: table;
            padding:0;
            span {
                display: table-cell;
                vertical-align: middle;
            }
        }
    }

    yt-result-set {
        display: block;
        width: auto;
        height: 800px;
        overflow: hidden;
    }
    
    .yt-result-set {
        transition: transform 0.5s ease-in-out;
        .result {
            margin-bottom: 65px;
        }
        
        &.row-1-activated {
            transform: translateY(0);
        }
        
        &.row-2-activated {
            transform: translateY(-620px);
        }
        
        &.row-3-activated {
            transform: translateY(-1240px);
        }
        
        &.row-4-activated {
            transform: translateY(-1860px);
            
        }

        .list-title {
            line-height: 100%;
            font-size: 3.125em;
            color: color-title-tv;
            margin: 0 0 40px 0 !important;
        }
            
        .ui-video-list {
            width: auto;
            height: 460px;
            padding-bottom: 10px;
            display: -webkit-inline-box;
            display: inline-flex;
            transition: transform 0.5s ease-in-out;
            .load-more-wrap {
                display: none;
            }
        }
        
        .ui-video-list-item {
            width: 460px;
            height: 465px;
            padding: 0;
            margin: 0 10px 0 0 !important; /* lazy but memory saving approach to override responsive styles ;) */
            background-color: bg-video-list-item-tv;
            transition: transform 0.25s ease-in-out;
            &:after {
                content: '';
                position: absolute;
                display: block;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                background-color: rgba(237,237,237,0.3);
                transition: background-color 0.25s ease-in-out;
            }
            
            &[activated="true"] {
                transform-origin: center center;
                transform: scale(1.025);
                box-shadow: 7px 7px 10px 0 rgba(0,0,0,0.3);
                z-index: 10;
                transition: transform 0.25s ease-in-out;
                transition-delay: 0.5s;
                &:after {
                    background-color: rgba(237,237,237,0);
                    transition: background-color 0.25s ease-in-out;
                }
            }

            .img {
                margin: 0;
                height: 259px;
            }
            
            .metadata {
                height: auto;
                margin-top: 10px;
                padding: 0 20px;
                .title {
                    height: 60px;
                    white-space: normal;
                    font-size: 1.625em;
                    color: color-title-tv;
                }
                .subtitle {
                    margin: 10px 0;
                }
                .channel,
                .created {
                    font-size: 1.125em;
                    color: color-metadata-tv;
                }
                .description {
                    margin: 0;
                    height: auto;
                    width: auto;
                    white-space: normal;
                    font-size: 1.125em;
                    color: color-title-tv;
                }
            }
            
            .duration, 
            svg {
                display: none;
            }
        }
    }
}

.tvmode {
    .activated, *[activated="true"] {
        button.search path {
            fill: #fff;
        }
    }
}

.tvmode {
    yt-result-set.playlist[activated="true"] {
        display: block;
        z-index: 10;
        position: absolute;
        height: 500px;
        width: auto;
        top: 300px;

        ui-video-list {
            height: 500px;
        }

        ui-video-list-item {
            width: 460px;
            height: 465px;
        }
    }
}
