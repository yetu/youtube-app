
bg-container = #dadada;

bg-video-list-item = #f6f6f6;

bg-playlist-item = #dadada;

bg-playlist-item-act = #666666;

bg-yt-viewer = #f6f6f6;

bg-yt-viewer-pl-visible = #c6c6c6;

bg-button = #009900;

color-title = #009900;

color-text = #333333;

color-button-text = #ffffff;

color-created = #666666;

clearfix() 
    zoom: 1;
    &:after, &:before {
        content: "";
        display: table;
    }
    &:after {
        clear: both;
    }

html, body {
    padding:0;
    margin:0;
    min-height: 100vh;
    font-family: source_sans_proregular;
    font-size: 100%;
    font-weight: normal;

    &.tvmode {
        width: 100%;
        min-height: 100%;
        height: 100%;
    }
}

body {
    background-color: bg-container;
}

.container {
    min-height: 100vh;
    background: bg-container;
    color: #333;
    margin: 0 auto;
    padding: 0 30px;
    clearfix();
}

h2 {
    font-size: 25px;
    line-height: 200%;
    margin: 0;
}

.clearfix {
    clearfix();
}
