
@media (min-width: 320px) {
    
    .container, .yt-viewer, .yt-video-description {
        width: 300px;
    }
    
    .container {
        position: relative;
    }
    
    .app-search .query {
        padding-left: 10px;
        width: 290px;
    }
    
    .ui-video-list-item {
        width: 300px;
        margin: 0 0 30px 0;
    }
    
    .yt-viewer {
        .buttons {
            .toggle-playlist {
                display: none;
            }
        }
        
        .playlist {
            width: 100%;
            .ui-video-list-item {
                margin: 0;
            }
        }
        .video {
            .yt-player {
                width:100%;
                height: 225px;
            }
        }
    }
}

