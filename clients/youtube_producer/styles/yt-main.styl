clearfix() 
    zoom: 1;
    &:after, &:before {
        content: "";
        display: table;
    }
    &:after {
        clear: both;
    }

html, body {
    padding:0;
    margin:0;
    min-height: 100vh;
    font-family: source_sans_proregular;
    font-size: 100%;
    font-weight: normal;

    &.tvmode {
        width: 100%;
        min-height: 100%;
        height: 100%;
    }
}

body {
    background-color: bg-container;
}

.container {
    position: relative;
    height: auto;
    min-height: 90vh;
    background: bg-container;
    color: color-text;
    margin: 0 auto;
    clearfix();
}

h2 {
    font-size: 25px;
    line-height: 200%;
    margin: 0;
}

.clearfix {
    clearfix();
}
