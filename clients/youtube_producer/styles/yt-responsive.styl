@media (min-width: 768px) {
    .container {
        width: 750px;
    }
    
    .ui-video-list-item {
        width: 360px;
        margin: 0 0 30px 30px;
        &:nth-child(odd) {
            margin-left: 0;
        }
    }
    
    .yt-viewer, .video {
        width: 750px;
    }
    
    .yt-viewer {
        .video {
            width: 750px;
            transition(width 0.5s);
            .yt-player {
                //height: 562.5px;
                transition(height 0.5s);
            }
            .yt-video-description {
                width: 750px;
                transition(all 0.5s);
            }
            .buttons {
                .toggle-playlist {
                    display: block;
                }
            }
        }
        
        .playlist {
            float: right;
            width: 0;
            transition(width 0.5s);
        }
        
        &.playlist-visible {
            .video {
                width: 500px;
                transition(width 0.5s);
                .yt-player {
                    //height: 375px;
                    transition(height 0.5s);
                }
                .yt-video-description {
                    width: 500px;
                    transition(all 0.5s);
                }
            }
            
            .playlist {
                width: 230px;
                transition(width 0.5s);
            }
        }
    }
}

