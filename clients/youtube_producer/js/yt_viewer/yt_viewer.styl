.yt-viewer {
    margin: 0 auto 30px;
    background-color: bg-yt-viewer;
    min-height: 75vh;
    overflow: hidden;
    box-shadow: 7px 7px 10px 0 rgba(0,0,0,0.3);
    clearfix();
    
    h2 {
        display: none;
        color:color-title;
    }
    
    h3 {
        font-family: 'source_sans_prolight';
        font-size: 1.4275em;
        margin: 20px 0 13px;
        color: color-title-light;
    }
    
    .video {
        float: left;
    }

    .buttons {
        position: relative;
        margin: 15px auto 0;
        clearfix();
        
        button {
            font-family: source_sans_prolight;
            height: 35px;
            font-size: 20px;
            line-height: 100%;
            display: block;
            padding: 5px;
            background: bg-button;
            border: 0;
            outline: 0;
            color: color-text-button;
            box-shadow: 1px 1px 2px 0 rgba(0,0,0,0.3);

            &:hover {
                cursor: pointer;
                background: bg-button-hover;
                color: color-text-button-hover;
                svg {
                    path, rect, polygon {
                        fill: color-text-button-hover;
                    }
                }
            }
        }
        
        .toggle-playlist {
            float: right;
            margin-top: -35px;
            width: auto;
            
            svg {
                height: 20px;
                width: auto;
                position: relative;
                top: 3px;
                margin: 0 0 0 5px;
            }
            
            .label_showPlaylist {
                svg {
                    transform: scaleX(-1);
                    margin: 0 5px 0 0;
                }
            }
        }
    }

    &.playlist-visible {
        background-color: bg-yt-viewer-pl-visible;
    }
}

yt-player {
    width:100%;
    position: relative;

    .yt-player, .overlay {
        width:100%;
    }

    .overlay {
        position: absolute;
        background-color: black;
        opacity: 0.8;
        top: -672px;
        height: 687px;
        font-size: 30px;
        color: white;
        display: table;

        div {
            display: table-cell;
            vertical-align: middle;
            text-align: center;
        }
    }
}

.yt-video-description {
    margin-top: 20px;
    clearfix();
    .metadata {
        margin-top: 10px;
        padding-top: 10px;
        border-top: solid #666666 1px;
        color: color-text;
        font-size: 1em;

        div {
            float: left;
            width: 200px;

            &.row {
                clear: both;
            }
        }
    }
}

.yt-viewer .playlist {
    height: 75vh;
    margin-bottom: 30px;
    .ui-video-list {
        height: 100%;
        overflow-y: auto;
        overflow-x: hidden;
    }

    .app-send-to-tv {
        display: none;
    }
    
    .ui-video-list-item {
        clearfix();
        width: 100%;
        height: 60px;
        padding: 0;
        background-color: bg-playlist-item;
        border-top: 1px solid #eee;
        border-bottom: 1px solid #ccc;
        &:first-child {
            border-top: 0;
        }
        .img {
            margin: 0;
            width: 150px;
            height: 50px;
            float: left;
            padding: 5px 0;
            
            img {
                float: right;
                width: 90px;
                height: 50px;
            }
            svg {
                position: relative;
                top: 17px;
                left: 20px;
                float:left;
                width: 17px;
                height: 15px;
                padding: 0;
                polygon {
                    filter: none;
                }
            }
            .duration {
                right: 0;
                bottom: 5px;
            }
        }
        .metadata {
            margin: 5px 10px;
            height: auto;
            .title {
                color: color-text;
                font-size: 1.125em;
                min-width: 50%;
                line-height: 150%;
                height: 25px;
                margin-bottom: 5px;
                overflow: hidden;
                white-space: nowrap;
            }
            .channel {
                font-size: 0.8125em;
                width: 100%;
                overflow: hidden;
                height: 13px;
            }
            .description, .created {
                display: none;
            }
        }
    }
}

.yt-controls {
    display: none;
}

.tvmode.fullscreen {

    .container {
        padding: 0 !important;
    }

    .yt-viewer, .video, .yt-player {
        height: 1080px !important;
        width: 1920px !important;
        position: relative;
        margin: 0 !important;
        padding: 0 !important;
    }

    .yt-viewer {
        h2,
        .buttons {
            display:none;
        }
    }

    .yt-player {
        position: absolute;
    }

    .yt-controls {
        position: absolute;
        bottom: 10px;
        height: 200px;
        width: 100%;
        border: solid pink 2px;
        display: block;
    }

    app-search,
    .yt-video-description,
    .playlist {
        display: none;
    }
}
