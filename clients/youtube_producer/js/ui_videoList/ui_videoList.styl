.ui-video-list {
    display: block;
    width: 100%;
    height: auto;
    position: relative;
    list-style: none;
    list-style-position: outside;
    padding: 0;

    &.popular {
        .load-more {
            display: none;
        }
    }

    .spinner {
        text-align: center;
        display: none;

        &.loading {
            display: block;
        }
    }
}

.ui-video-list-item {
    position: relative;
    background-color: bg-video-list-item;
    float: left;
    overflow: hidden;
    padding-bottom: 10px;
    
    .img {
        position: relative;
        margin: 10px 10px 0px;
        display: block;

        img {
            max-width: 100%;
            width: 100%;
            height: auto;
        }

        .duration,
        .items {
            position: absolute;
            right: 0;
            bottom: 0;
            width: 40px;
            height: 20px;
            background-color: #000;
            color: #fff;
            font-size: 13px;
            span {
                display: block;
                width: 100%;
                text-align: center;
                padding-top:2px;
            }
        }

        .items span::before {
            content: "PL: "
        }
    }
    
    
    .playBtn {
        position: absolute;
        width: auto;
        height: auto;
        z-index: 100;
        .playimg {
            img {
                opacity: 0.8;
                transform: scaleX(-1);
                transform: rotate(0);
 /*                  -ms-filter: "flipH";
                filter: flipH;
             &.showOnPlaylist {
                    display: none;
                    
                    width :40px;
                    height: 40px;
                }*/
            }
            &:hover {
                cursor: pointer;
                img {
                    opacity: 1.0;
                }
            }
        }
    }

    .metadata {
        height: 150px;
        padding: 0 10px;
        overflow: hidden;

        .title{
            color: color-title;
            padding: 0;
            margin: 0;
            font-size: 17px;
            line-height: 100%;
            font-weight: normal;
            font-family: source_sans_proregular;
        }

        .subtitle {
            .channel {
                color: color-author;
            }
            .created {
                color: color-created;
            }
            
            padding: 0;
            margin: 5px 0;
        }

        .description{
            padding: 0;
            margin: 5px 0;
        }
    }

    .buttons {
        display:none;
    }
}


.ui-video-list {
    &.list .ui-video-list-item {
        width: 100%;

        .img {
            width: 40%;
            float: left;
            margin-right: 5px;

            img {
                min-height: initial;
            }
        }
    }
}
