.list-title {
    width: 240px;
    margin: 0 auto;
}

.ui-video-list {
    display: block;
    width: 100%;
    height: auto;
    position: relative;
    list-style: none;
    list-style-position: outside;
    padding: 0;
    
    .load-more {
        background-color: bg-button;
        font-family: source_sans_prolight;
        text-align: center;
        height: 34px;
        font-size: 18px;
        line-height: 100%;
        display: block;
        padding: 4px 10px;
        margin: 0 auto 20px;
        border: 0;
        outline: 0;
        color: color-text-button;
        box-shadow: 1px 1px 2px 0 rgba(0,0,0,0.3);
        
        svg {
            height: auto;
            width: 12px;
            position: relative;
            top: 2px;
            margin: 0 0 0 5px;
            transform: rotate(90deg);
            polygon {
                filter: none;
            }
        }
        
        &:hover {
            color: color-text-button-hover;
            background-color: bg-button-hover;
            cursor: pointer;
            svg {
                polygon {
                    fill: color-text-button-hover;
                }
            }
        }
    }
    
    &.popular {
        .load-more {
            display: none;
        }
    }
    
    .spinner {
        text-align: center;
        display: none;

        &.loading {
            display: block;
        }
    }
}

.ui-video-list-item {
    display: block;
    width: 240px;
    height: 260px;
    margin: 0 auto 30px;
    position: relative;
    background-color: bg-video-list-item;
    float: none;
    overflow: hidden;
    padding: 0 0 10px 0;
    
    .img {
        display: block;
        width: auto;
        height: 124px;
        position: relative;
        margin: 10px;
        img {
            max-width: 100%;
            width: 100%;
            height: auto;
        }
        
        svg {
            width: 30px;
            height: auto;
            position: absolute;
            top: 37px;
            left: 90px;
            opacity: 0.8;
            padding: 10px;
        }
        
        &:hover {
            cursor: pointer;
            svg {
                opacity: 1.0;
            }
        }

        .duration,
        .items {
            position: absolute;
            right: 0;
            bottom: 0;
            width: auto;
            height: 18px;
            background-color: #000;
            color: #fff;
            font-size: 13px;
            padding: 2px 2px 0;
            span {
                display: block;
                width: 100%;
                text-align: center;
            }
        }

        .items {
            background-color: bg-playlist-icon;
            box-shadow: 1px 1px 2px 0 rgba(0,0,0,0.2);
            clearfix();
            svg {
                position: relative;
                float: left;
                width: auto;
                height: 14px;
                margin-right: 5px;
                top: 1px;
                left: 1px;
                padding: 0;
            }
            span {
                float: right;
                width: auto;
                color: color-playlist-icon-font;
            }
        }
            
    }

    .metadata {
        height: 150px;
        padding: 0 10px;
        overflow: hidden;
        font-size: 13px;

        .title{
            display:  block;
            color: color-title;
            padding: 0;
            margin: 0;
            font-size: 17px;
            height: 40px;
            overflow: hidden;
            line-height: 125%;
            font-weight: normal;
            font-family: source_sans_proregular;
            text-decoration: none;
        }

        .subtitle {
            .channel {
                color: color-author;
            }
            .created {
                color: color-created;
            }
            
            padding: 0;
            margin: 5px 0;
        }

        .description{
            padding: 0;
            height: 35px;
            overflow: hidden;
            margin: 5px 0;
        }
    }

    .buttons {
        display:none;
    }
}


.ui-video-list {
    &.list .ui-video-list-item {
        width: 100%;
        cursor: pointer;

        &:hover {
            /* TODO: ? */
        }

        .img {
            width: 40%;
            float: left;
            margin-right: 5px;

            img {
                min-height: initial;
            }
        }
    }
}
