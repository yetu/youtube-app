.app-search{
    position: relative;
    width: 100%;
    padding: 30px 0px;

    .query {
        font-family: source_sans_prolight;
        font-size: 24px;
        color: color-text-query-input;
        display: block;
        width: 95%;
        height: 50px;
        padding-left: 5%;
        background-color: bg-query-input;
        border: 0;
        outline: 0;
    }

    button.search {
        width: 35px;
        height: 50px;
        position: absolute;
        top: 35px;
        right: 5%;
        background: none;
        border: 0;
        outline: 0;
        cursor: pointer;

        &:hover {
            path {
                fill: color-button-search-hover;
            }
        }
    }
}



