.yt-viewer {
    margin: 0 auto 30px;
    background-color: bg-yt-viewer;
    min-height: 75vh;
    overflow: hidden;
    box-shadow: 7px 7px 10px 0 rgba(0,0,0,0.3);
    clearfix();
    
    h2 {
        display: none;
        color:color-title;
    }
    
    h3 {
        font-family: 'source_sans_prolight';
        font-size: 1.4275em;
        margin: 20px 0 13px;
        color: color-title-light;
    }
    
    .video {
        float: left;
        position: relative;
        .overlay {
            position: absolute;
            background-color: bg-player-overlay;
            top: -672px;
            height: 687px;
            font-size: 30px;
            display: table;

            div {
                display: table-cell;
                vertical-align: middle;
                font-family: 'source_sans_prolight';
                text-transform: uppercase;
                font-size: 1.7375em;
                text-align: center;
                color: color-text-button;
            }
        }
    }

    .buttons {
        position: relative;
        margin: 15px auto 0;
        clearfix();
        
        button {
            font-family: source_sans_prolight;
            height: 34px;
            font-size: 18px;
            line-height: 100%;
            display: block;
            padding: 4px 10px;
            background: bg-button;
            border: 0;
            outline: 0;
            color: color-text-button;
            box-shadow: 1px 1px 2px 0 rgba(0,0,0,0.3);

            &:hover {
                cursor: pointer;
                background: bg-button-hover;
                color: color-text-button-hover;
                svg {
                    path, rect, polygon {
                        fill: color-text-button-hover;
                    }
                }
            }
        }
        
        .toggle-playlist {
            float: right;
            margin-top: -35px;
            width: auto;
            
            svg {
                height: 12px;
                width: auto;
                position: relative;
                top: 0;
                margin: 0 0 0 5px;
            }
            
            .label_showPlaylist {
                svg {
                    transform: scaleX(-1);
                    margin: 0 5px 0 0;
                }
            }
        }
    }
}

yt-player {
    width:100%;
    position: relative;

    .yt-player, .overlay {
        width:100%;
    }
}

.yt-video-description {
    margin-top: 20px;
    clearfix();
    .metadata {
        margin-top: 10px;
        padding-top: 10px;
        border-top: solid #666666 1px;
        color: color-text;
        font-size: 1em;

        div {
            float: left;
            width: 200px;

            &.row {
                clear: both;
            }
        }
    }
}

.yt-viewer .playlist {
    height: auto;
    margin-bottom: 30px;
    .ui-video-list {
        height: 100%;
        overflow-y: auto;
        overflow-x: hidden;
    }

    .app-send-to-tv {
        display: none;
    }
    
    .ui-video-list-item {
        clearfix();
        width: 100%;
        height: 60px;
        padding: 0;
        background-color: bg-playlist-item;
        transition: background-color 0.25s ease-in-out;
        border-top: 1px solid #eee;
        border-bottom: 1px solid #ccc;

        &:first-child {
            border-top: 0;
        }

        ui-video-list-play-arrow {
            display: none;
        }

        .img {
            margin: 0;
            width: 150px;
            height: 50px;
            float: left;
            padding: 5px 0;

            .index {
                position: absolute;
                font-size: 1.75em;
                text-align: center;
                padding-top: 5px;
                width: 55px;
                color: color-playlist-item-index;
            }
            
            img {
                float: right;
                width: 90px;
                height: 50px;
            }
            svg {
                position: relative;
                top: 17px;
                left: 20px;
                float:left;
                width: 17px;
                height: 15px;
                padding: 0;
                polygon {
                    filter: none;
                }
            }
            .duration {
                right: 0;
                bottom: 5px;
            }
        }

        .metadata {
            margin: 5px 10px;
            height: auto;
            .title {
                position: relative;
                color: color-text;
                font-size: 1.125em;
                min-width: 50%;
                line-height: 125%;
                height: 25px;
                top: 5px;
            }
            .subtitle {
                margin: 0;  
            }
            .channel {
                font-size: 0.8125em;
                width: 100%;
                height: 15px;
            }
            .title, .channel {
                overflow: hidden;
                white-space: nowrap;
            }
            .description, .created {
                display: none;
            }
        }
        
        &.playing, &:hover {
            background-color: bg-playlist-item-playing;
            transition: background-color 0.25s ease-in-out;
            cursor: pointer;
            
            .index {
                display: none;
            }

            ui-video-list-play-arrow {
                display: block;
            }
            
            .metadata {
                .title, .channel {
                    color: color-playlist-item-playing;
                }
            }
        }
    }
}

yt-controlbar {
    display: none;

    .controlbar-overlay {
        width: 1920px;
        height: 400px;
        position: absolute;
        bottom: 0;
        left: 0;
        background-image: -webkit-linear-gradient(#fff 0%, #000 100%);
        background-image: -moz-linear-gradient(#fff 0%, #000 100%);
        background-image: -o-linear-gradient(#fff 0%, #000 100%);
        background-image: linear-gradient(#fff 0%, #000 100%);
        opacity: 0.9;
        transition: 0.5s;
    

        .button {
            background-repeat: no-repeat;
            background-position: center;
            width: 100px;
            height: 100px;
            position: absolute;
            top: 50px;

            &.forward {
                background-image: url("../img/forward.svg");
                left: 1100px;
            }

            &.rewind {
                background-image: url("../img/forward.svg");
                left: 700px;
                transform: matrix(-1, 0, 0, 1, 0, 0);
              }

            &.play, &.pause {
                top: 50px;
                left: 900px;
            }

            &.play {
                background-image: url("../img/play.svg");
            }

            &.pause {
                background-image: url("../img/pause.svg");
            }

            &.highlight {
                background-image: url("../img/forward_highlight.svg");
            }
        }

        progress[value] {
            /* Reset the default appearance */
            -webkit-appearance: none;
            appearance: none;

            width: 1500px;
            height: 10px;
            position: absolute;
            top: 200px;
            left: 200px;

            &::-webkit-progress-bar {
                background-color: #989898;
                border-radius: 5px;
            }

            &::-webkit-progress-value {
                background-color: #CDCCCC;
                border-radius: 5px;
                transition: 1s;
            }
        }

        .time, .duration {
            position: absolute;
            top: 186px;
            color: #f2f2f2;
            font-size: 30px;
        }

        .time {
            right: 1730px;
        }

        .duration {
            left: 1710px;
        }

        .title {
            color: #f2f2f2;
            font-size: 30px;
            text-align: center;
            width: 1980px;
            position: absolute;
            top: 300px;
            left: 0;
        }
    }
}

.tvmode.fullscreen {

    .container, .yt-viewer, .video, .yt-player {
        height: 1080px !important;
        width: 1920px !important;
        position: relative;
        margin: 0 !important;
        padding: 0 !important;
    }

    yt-controlbar {
        display: block;
    }

    .yt-viewer {
        h2,
        .buttons {
            display:none;
        }
    }

    .yt-player {
        position: absolute;
    }

    app-search,
    .yt-video-description,
    .playlist {
        display: none;
    }
}
