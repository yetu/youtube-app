
@media (min-width: 320px) {
    .container, .ui-video-list-item {
        width: 300px;
    } 
    .ui-video-list-item {
        margin: 0;
        margin-bottom: 30px;
    }
}

@media (min-width: 480px) {
    .container, .ui-video-list-item{
        width: 450px;
    } 
}

@media (min-width: 768px) {
    .container {
        width: 750px;
    }
    
    .ui-video-list-item {
        width: 360px;
        margin-right: 30px;
        margin-bottom: 30px;
        &:nth-child(2) {
            margin-right: 0;
        }
        &:last-child {
            margin-right: 0;
        }
    }
}

@media (min-width: 992px){
    .container {
        width: 970px;
    }
    
    .ui-video-list-item {
        width: 220px;
        &:nth-child(2) {
            margin-right: 30px;
        }
    }
}

