.pcmode {

    app-search app-key-input {
        display: none;
    }
}

.tvmode {
    
    .container { 
        width: 100vw;
        padding: 0;
    }
    
    .container, yt-result-set, .yt-result-set, .result, .ui-video-list {
        overflow-y: visible;
    }
    
    .yt-result-set,
    .app-search {
        margin-left: 160px;
    }
    
    .app-search {
        margin-right: 160px;
    }
    
    .app-search,
    app-key-input {
        width: auto;
    }
    
    app-key-input {
        margin-bottom: 65px;
    }
    
    .yt-result-set {
        height: 900px;
        
        .result {
            margin-bottom: 65px;
        }
        

        .list-title {
            line-height: 100%;
            font-size: 3.125em;
            color: color-title-tv;
            margin: 0 0 40px 0 !important;
        }
            
        .ui-video-list {
            min-width: 100vw;
            height: 460px;
            padding-bottom: 10px;
            white-space: nowrap;
        }
        
        .ui-video-list-item {
            width: 460px;
            height: 465px;
            padding: 0;
            margin: 0 10px 0 0 !important; /* lazy but memory saving approach to override responsive styles ;) */
            background-color: bg-video-list-item-tv;
            
            &:after {
                content: '';
                position: absolute;
                display: block;
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                background-color: rgba(237,237,237,0.3);
                transition: background-color 0.25s ease-in-out;
            }

            .img {
                margin: 0;
                height: 259px;
            }
            
            .metadata {
                height: auto;
                margin-top: 10px;
                padding: 0 20px;
                .title {
                    height: 60px;
                    white-space: normal;
                    font-size: 1.625em;
                    color: color-title-tv;
                }
                .subtitle {
                    margin: 10px 0;
                }
                .channel,
                .created {
                    font-size: 1.125em;
                    color: color-metadata-tv;
                }
                .description {
                    margin: 0;
                    height: auto;
                    width: auto;
                    white-space: normal;
                    font-size: 1.125em;
                    color: color-title-tv;
                }
            }
            
            .duration, 
            svg {
                display: none;
            }
        }
    }

    .ui-video-list-item[activated="true"] {
        transform-origin: center center;
        transform: scale(1.025);
        box-shadow: 7px 7px 10px 0 rgba(0,0,0,0.3);
        z-index: 10;
        &:after {
            background-color: rgba(237,237,237,0);
            transition: background-color 0.25s ease-in-out;
        }
    }
}

.tvmode {
    .activated, *[activated="true"] {
        button.search path {
            fill: #fff;
        }
    }
}
