@media (min-width: 768px) {
    .container, .yt-viewer {
        width: 740px;
    }
    
    .app-search{
        .query {
            width: 730px;
            padding-left: 10px;
        }
        button.search {
            right: 10px;
        }
    }
    
    .list-title {
        margin: 0;
    }

    .ui-video-list-item {
        margin-left: 10px;
        margin-bottom: 10px;
        &:nth-child(even) {
            margin-left: 10px;
        }
        &:nth-child(3n+1) {
            margin-left: 0;
        }
    }

    .yt-viewer {
        .video {
            width: 700px;
            margin: 20px;
            float: left;
            transition: width 0.5s ease-in-out;

            .yt-player {
                height: 394px;
                transition: height 0.5s ease-in-out;
            }
            .overlay {
                height: 394px;
                top: -379px;
                transition: all 0.5s ease-in-out;
            }
            .yt-video-description {
                width: 680px;
                padding: 10px;
                transition: width 0.5s ease-in-out;
            }
        }
        
        .buttons {
            .toggle-playlist {
                display: block;
            }
        }

        .playlist {
            h3 {
                display: none;
            }
            position: relative;
            width: 280px;
            float: right;
            margin: 20px -280px 20px 0;
            transition: margin-right 0.5s ease-in-out;
        }
        
        &.playlist-visible {
            .video {
                width: 400px;
                transition: width 0.5s ease-in-out;
                
                .yt-player {
                    height: 225px;
                    transition: height 0.5s ease-in-out;
                }
                .overlay {
                    height: 225px;
                    top: -210px;
                    transition: all 0.5s ease-in-out;
                }
                
                .yt-video-description {
                    width: 380px;
                    transition: all 0.5s ease-in-out;
                }
            }
            
            .playlist {
                margin: 20px 20px 20px 0;
                transition: margin-right 0.5s ease-in-out;
            }
        }
    }
}

