.yt-viewer {
    width: 1200px;
    margin: 10px auto;

    .video {
        width: 1200px;
        float: left;
    }

    .buttons {
        position: relative;
        padding: 5px;
        
        .toggle-playlist {
            position: absolute;
            right: 5px;
            top: 5px;
        }
    }

    &.playlist-visible {
        .video {
            width: 800px;
        }
    }
}

.yt-player {
  width: 100%;
  height: 600px;
  border: solid red 2px;
}

.yt-video-description {
    width: 100%;
    height: 200px;
    border: solid orange 2px;
    padding: 10px;

    .metadata {
        margin-top: 10px;
        padding-top: 10px;
        border-top: solid gray 1px

        div {
            float: left;
            width: 200px;

            &.row {
                clear: both;
            }
        }
    }
}

.yt-viewer .playlist {
    width: 380px;
    height: 900px;
    border: solid black 2px;
    float: right;
    overflow-y: auto;
    overflow-x: hidden;

    .app-send-to-tv {
        display: none;
    }
}

.yt-controls {
  display: none;
}

.tvmode {

  .yt-viewer, .video, .yt-player {
    height: 100%;
    width: 100% !important;
    position: relative;
  }

    .yt-viewer {
        h2,
        .buttons {
            display:none;
        }
    }

  .yt-player {
    position: absolute;
  }

  .yt-controls {
    position: absolute;
    bottom: 10px;
    height: 200px;
    width: 100%;
    border: solid pink 2px;
    display: block;
  }

  app-search,
  .yt-video-description,
  .playlist {
     display: none;
  }
}
